#card-name
{
  text-align: center;
  color: antiquewhite;
  border: 1px dashed antiquewhite;
  padding: 10px 5px 5px 10px;
  font-size: 30px;
}

#card-description-box
{
  text-align: justify;
  color: antiquewhite;
  border: 1px dashed antiquewhite;
  padding: 10px 10px 10px 10px;
  font-size: 20px;
}

.game-avatar
{
  border: 8px solid rgba(193, 158, 77, 0.7);
  box-shadow: 0px 0px 2px rgba(193, 158, 77, 0.7), 0px 0px 2px black;
  border-radius: 10%;
  position: relative;
  Right: 8px;
}

.engine-button
{
  color: rgba(193, 158, 77, 0.9);
  font-family: "Geneva", Helvetica Neue, Helvetica, Times New Roman, sans-serif;
  font-size: 16px;
  font-weight: bold;
  text-shadow: 1px 1px 1px black, 1px 1px 1px gold, 1px 1px 1px silver, 1px 1px 1px antiquewhite;
  background: linear-gradient(rgba(150, 150, 150, 0.9), rgba(75, 75, 75, 0.9));
  border: 0.5px solid #f0f0f0;
  min-height: 32px;
  padding-left: 8px;
  padding-right: 8px;
}

.engine-button-success
{
  background: repeating-linear-gradient(
    -45deg,
    transparent,
    transparent 10px,
    rgba(75, 75, 75, 0.9) 10px,
    rgba(0, 0, 0, 0.9) 20px
    ),
    linear-gradient(to bottom, rgba(100, 100, 100, 0.9), rgba(50, 50, 50, 0.9));
}

.engine-button-danger
{
  background: linear-gradient(rgba(100, 100, 100, 0.9), rgba(50, 50, 50, 0.9));
}

.engine-button-success:hover
{
  color: green;
  font-weight: bold;
  background: repeating-linear-gradient(
    -45deg,
    transparent,
    transparent 10px,
    rgba(75, 75, 75, 0.9) 10px,
    rgba(0, 0, 0, 0.9) 20px
    ),
    linear-gradient(to bottom, rgba(100, 100, 100, 0.9), rgba(50, 50, 50, 0.9));
}

.engine-button-danger:hover
{
  color: red;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.8);
}

.game-field-zone
{
  border: 1px solid antiquewhite;
  height: 300%;
  background: repeating-linear-gradient(
    -45deg,
    transparent, transparent 2px,
    rgba(75, 75, 75, 0.5) 2px, rgba(0, 0, 0, 0.5) 4px
    ),
    linear-gradient(to bottom, rgba(100, 100, 100, 0.5), rgba(50, 50, 50, 0.5));
}

#options-window
{
  background-color: rgba(0, 0, 0, 0.8);
  border: 3px double antiquewhite;
  border-radius: 25%;
  padding: 25px;
  margin-top: -25px;
  position: fixed;
  right: 12px;
  bottom: 12px;
  z-index: 10;
}

#options-window:hover
{
  background: radial-gradient(black, gray);
  border-radius: 25%;
  padding: 25px;
  margin-top: -25px;
  position: fixed;
  right: 10px;
  bottom: 10px;
  z-index: 10;
}

#game-end-window
{
  width: 110%;
  text-align: center;
  color: antiquewhite;
  text-shadow: 0px 0px 2px black, 0px 0px 4px antiquewhite;
  z-index: 9;
  -webkit-transform: rotate(35deg);
  -moz-transform: rotate(35deg);
  -ms-transform: rotate(35deg);
  -o-transform: rotate(35deg);
  background: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 10px,
    rgba(193, 158, 77, 0.9) 10px,
    rgba(78, 78, 78, 0.9) 20px
    ),
    linear-gradient(
    to bottom,
    rgba(78, 78, 78, 0.9),
    rgba(0, 0, 0, 0.9));
}
   
}

