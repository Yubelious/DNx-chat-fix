    font-size: 36px;
    font-style: italic;
  }

  hr
  {
    margin: 0 0 0 0;
    opacity: 0;
    border: none;
  }

  #tab-duel p
  {
    position: fixed;
    z-index: 5;
    margin-top: -205px;
  }

  #tab-duel-home .button
  {
    font-size: 25px;
    opacity: 0.9;
    width: 100%;
    margin-top: 100px;
  }

  #tab-duel-searching .button
  {
    font-size: 25px;
    color: rgba(48, 167, 145, 0.9);
    opacity: 0.9;
    width: 100%;
    margin-top: 14%;
    border: 2px solid rgba(48, 167, 145, 0.9);
  }

  .table
  {
    opacity: 0.9;
    width: 100%;
    max-width: 100%;
    margin: 30px 1px 30px -1px;
    font-size: 20px;
    color: bisque;
    text-shadow: 1px 1px 1px black;
    background-image: url("http://simg4.gelbooru.com//images/2a/58/2a5883e70e94388d6bedaa768c5c6bac.jpg");
 /* Source retroz.web.fc2.com/illust/gx/i/20090125_kira.jpg obsolete. Uploaded to Zerochan by Manaka.*/
    background-size: 199%;
    text-align: center;
    border: 2px solid rgba(0, 0, 0, 0);
    border-collapse: collapse;
  }

  .navbar-nav>li>a
  {
    -webkit-transition: color 1s, background-color 2s;
    -moz-transition: color 1s, background-color 2s;
    -ms-transition: color 1s, background-color 2s;
    -o-transition: color 1s, background-color 2s;
    transition: color 1s, background-color 2s;
    color: antiquewhite;
    background-color: rgba(118, 109, 135, 0.9);
    padding-top: 12px;
    padding-bottom: 12px;
    font-size: 12px;
  }

  .nav>li>a:focus, .nav>li>a:hover
  {
    -webkit-transition: color 1s, background-color 2s;
    -moz-transition: color 1s, background-color 2s;
    -ms-transition: color 1s, background-color 2s;
    -o-transition: color 1s, background-color 2s;
    transition: color 1s, background-color 2s;
    color: rgba(48, 167, 145, 0.9);
    background-color: rgba(193, 158, 77, 0.9);
  }
}

@-moz-document url-prefix("https://duelingnexus.com/game/")
{
  html
  {
    background: url(http://www.wallpapermaiden.com/wallpaper/5402/download/1920x1080/yu-gi-oh-gx-yubel-jaden-yuki-beyond-the-clouds.jpg) no-repeat center center fixed !important;
 /*Image by either Dyunasumon or Moribuden*/;
  }

  body
  {
    font-size: 14px;
    font-family: "Geneva", Helvetica Neue, Helvetica, Times New Roman, sans-serif;
    color: rgba(193, 158, 77, 0.9);
    text-shadow: 0.3px 0.3px 0.3px rgba(10, 100, 10, 0.3), 0.7px 0.7px 0.7px rgba(193, 158, 77, 0.7), 0.5px 0.5px 0.5px rgba(0, 0, 0, 0.5);
    background-color: rgba(0, 0, 0, 0);
    overflow-x: hidden;
  }

  #game-room-container
  {
    width: 50%;
    padding: 40px;
    margin-top: 18%;
  }

  #game-room-left-buttons
  {
    font-size: 20px;
    font-weight: bold;
  }

  #game-room-right-buttons
  {
    font-size: 20px;
    font-weight: bold;
  }

  #game-room-right-buttons:active
  {
    -webkit-animation: mymove 2s infinite;
    animation: mymove 2s infinite;
    cursor: progress;
  }
@  -webkit-keyframes mymove
  {
    100% {-webkit-transform: rotate(360deg);
  }
}

@keyframes mymove
{
  100%
  {
    transform: rotate(360deg);
  }
}

#game-deck-selection
{
  display: none;
  position: absolute;
  border: 2px solid antiquewhite;
  border-radius: 10%;
  background-color: rgba(0, 0, 0, 0.9);
  margin-top: 5px;
  padding: 10px 0px 15px 15px;
  z-index: 1;
  max-width: 600px;
}

#game-deck-selection:hover
{
  display: none;
  position: absolute;
  background: radial-gradient(gray, black);
  border-radius: 10%;
  margin-top: 5px;
  padding: 10px 0px 15px 15px;
  z-index: 1;
  max-width: 600px;
}

#game-rps-container
{
  text-align: center;
  margin-top: 22%;
}
