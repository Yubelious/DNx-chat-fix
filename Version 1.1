  div
  {
    cursor: default;
  }

  .container
  {
    width: 100%;
  }

  .container #profile
  {
    margin-top: 5%;
  }

  .container-fluid
  {
    background-color: rgba(118, 109, 135, 0.9);
    padding-right: 50px;
    padding-left: 365px;
